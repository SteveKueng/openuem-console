package computers_views

import (
	"fmt"
	"github.com/gohugoio/locales"
	"github.com/invopop/ctxi18n/i18n"
	"github.com/labstack/echo/v4"
	"github.com/open-uem/openuem-console/internal/controllers/sessions"
	"github.com/open-uem/openuem-console/internal/views/partials"
	ent "github.com/open-uem/openuem_ent"
)

templ OperatingSystem(c echo.Context, p partials.PaginationAndSort, sm *sessions.SessionManager, l locales.Translator, agent *ent.Agent, confirmDelete bool) {
	@partials.Header([]partials.Breadcrumb{{Title: "Computers", Url: "/computers"}, {Title: agent.Hostname, Url: fmt.Sprintf("/computers/%s", agent.ID)}}, sm)
	<main class="grid flex-1 items-start gap-4 p-4 sm:px-6 sm:py-0 md:gap-8">
		<div class="uk-width-1-2@m uk-card uk-card-default">
			<div class="uk-card-body uk-flex uk-flex-column gap-4">
				<div class="flex gap-2 items-center">
					<span class="uk-text-bold uk-text-large">{ agent.Hostname }</span>
					@partials.ShowAppliedTags(agent.Edges.Tags, agent.ID, p, "/computers", "#main", "outerHTML")
				</div>
				@ComputersNavbar(agent.ID, "os", agent.VncProxyPort, confirmDelete)
				if confirmDelete {
					@partials.ConfirmDelete(i18n.T(ctx, "agents.confirm_delete"), "/computers", "/computers/"+agent.ID, c.Request().Referer())
				}
				<div class="uk-width-1-2@m uk-card uk-card-default">
					<div class="uk-card-header">
						<h3 class="uk-card-title">{ i18n.T(ctx, "inventory.os.title") }</h3>
						<p class="uk-margin-small-top uk-text-small">
							{ i18n.T(ctx, "inventory.os.description") }
						</p>
					</div>
				</div>
				<div class="uk-card uk-card-body uk-card-default">
					<table class="uk-table uk-table-small uk-table-divider uk-table-justify">
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.version") }</th>
							<td>{ agent.Edges.Operatingsystem.Version }</td>
						</tr>
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.desc") }</th>
							<td>{ agent.Edges.Operatingsystem.Description }</td>
						</tr>
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.architecture") }</th>
							<td>{ agent.Edges.Operatingsystem.Arch }</td>
						</tr>
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.username") }</th>
							<td>{ agent.Edges.Operatingsystem.Username }</td>
						</tr>
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.installation") }</th>
							<td>{ l.FmtDateMedium(agent.Edges.Operatingsystem.InstallDate.Local()) + " " + l.FmtTimeShort(agent.Edges.Operatingsystem.InstallDate.Local()) }</td>
						</tr>
						<tr>
							<th>{ i18n.T(ctx, "inventory.os.last_bootup") }</th>
							<td>{ l.FmtDateMedium(agent.Edges.Operatingsystem.LastBootupTime.Local()) + " " + l.FmtTimeShort(agent.Edges.Operatingsystem.LastBootupTime.Local()) }</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</main>
}
