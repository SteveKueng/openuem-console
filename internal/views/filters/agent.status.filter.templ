package filters

import "github.com/invopop/ctxi18n/i18n"

templ FilterStatus(f AgentFilter, url, target, swap string, disableFunc func() bool) {
	<button title="Filter by agent status" type="button">
		if f.EnabledAgents || f.DisabledAgents {
			<uk-icon icon="filter" hx-history="false" custom-class="mr-2 h-5 w-5 fill-red-500 text-red-500" uk-cloak></uk-icon>
		} else {
			<uk-icon icon="filter" hx-history="false" custom-class="mr-2 h-5 w-5" uk-cloak></uk-icon>
		}
	</button>
	<div class="uk-drop uk-dropdown" uk-dropdown="mode: click">
		<div class="flex flex-col gap-2 p-2">
			<div class="p-2">
				<input
					id="filterByAgentsEnabled"
					name="filterByAgentsEnabled"
					type="checkbox"
					class="uk-checkbox mx-3"
					checked?={ f.EnabledAgents }
				/>
				<label for="filterByAgentsEnabled">{ i18n.T(ctx, "agents.enabled") }</label>
			</div>
			<div class="p-2">
				<input
					id="filterByAgentsDisabled"
					name="filterByAgentsDisabled"
					type="checkbox"
					class="uk-checkbox mx-3"
					checked?={ f.DisabledAgents }
				/>
				<label for="filterByAgentsDisabled">{ i18n.T(ctx, "agents.disabled") }</label>
			</div>
			<button
				type="button"
				class="uk-button uk-button-primary mx-2"
				hx-post={ url }
				hx-push-url="false"
				hx-target={ target }
				hx-swap={ swap }
			>
				{ i18n.T(ctx, "Filter") }
			</button>
			@ClearFilter("filterByAgents", url, target, swap, disableFunc)
		</div>
	</div>
}
